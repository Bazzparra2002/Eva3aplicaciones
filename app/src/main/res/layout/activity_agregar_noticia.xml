<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarNoticiaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAgregarNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/ivLogoAgregar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logoapp"
            android:contentDescription="Logo"
            android:layout_gravity="start"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar noticia"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="start"
            android:layout_marginStart="60dp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarAgregarNoticia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TÃ­tulo Noticia"
                android:inputType="textCapSentences"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bajada Noticia"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="3"
                android:gravity="top"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etUrlImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL Imagen"
                android:inputType="textUri"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etContenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cuerpo"
                android:inputType="textMultiLine"
                android:lines="5"
                android:gravity="top"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autor"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnCrearNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear Noticia"
                android:background="?attr/colorPrimary"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>